<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/add_company_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="65dp"
        android:padding="8dp"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/textview_item_background"
        android:gravity="center"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="1234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/add_piece_textView"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@drawable/textview_item_background"
        android:gravity="center"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeTextType="uniform"
        android:lines="1"
        android:padding="2dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/add_company_textView"
        app:layout_constraintStart_toEndOf="@+id/add_company_textView"
        app:layout_constraintTop_toTopOf="@+id/add_company_textView"
        tools:text="1800å…ƒ" />
</androidx.constraintlayout.widget.ConstraintLayout>