<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:stretchColumns="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="100">

                <TextView
                    android:id="@+id/type_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:autoSizeMaxTextSize="20dp"
                    android:autoSizeTextType="uniform"
                    android:background="@color/pinya_yellow3"
                    android:gravity="center"
                    android:minHeight="60dp"
                    android:padding="2dp"
                    android:textSize="20dp"
                    tools:text="油錢油" />

                <TextView
                    android:id="@+id/carId_textView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:autoSizeMaxTextSize="20dp"
                    android:autoSizeTextType="uniform"
                    android:background="@color/pinya_yellow2"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textSize="20dp"
                    tools:text="@string/text_driver" />

                <TextView
                    android:id="@+id/date_TextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:autoSizeMaxTextSize="20dp"
                    android:autoSizeTextType="uniform"
                    android:background="@color/pinya_yellow3"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textSize="20dp"
                    tools:text="@string/text_date" />


                <TextView
                    android:id="@+id/price_textView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:autoSizeMaxTextSize="20dp"
                    android:autoSizeTextType="uniform"
                    android:background="@color/pinya_yellow2"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textSize="20dp"
                    tools:text="@string/text_price" />
            </TableRow>
            <TableRow
                android:id="@+id/ps_tableRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="20"
                    android:autoSizeMaxTextSize="20dp"
                    android:autoSizeTextType="uniform"
                    android:background="@color/pinya_yellow2"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/text_ps"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/ps_textView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="80"
                    android:autoSizeMaxTextSize="20dp"
                    android:autoSizeTextType="uniform"
                    android:background="@color/pinya_yellow1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="2dp"
                    android:textSize="20dp"
                    tools:text="加油好貴加油好貴加油好貴加油好貴加油好貴加油好貴加油好貴加油好貴加油好貴加油好貴加油好貴加油好貴加油好貴" />
            </TableRow>
        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>