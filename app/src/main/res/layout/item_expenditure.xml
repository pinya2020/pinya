<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:stretchColumns="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/type_textView"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:background="@color/pinya_yellow3"
                    android:gravity="center"
                    android:textSize="20sp"
                    tools:text="油錢油" />

                <TextView
                    android:id="@+id/carId_textView"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@color/pinya_yellow2"
                    android:gravity="center"
                    tools:text="@string/text_carId"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/date_TextView"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@color/pinya_yellow3"
                    android:gravity="center"
                    tools:text="@string/text_date"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/price_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/pinya_yellow2"
                    android:gravity="center"
                    tools:text="@string/text_price"
                    android:textSize="20sp" />
            </TableRow>
            <TableRow
                android:id="@+id/ps_tableRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/pinya_yellow2"

                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="@string/text_ps"/>
                <TextView
                    android:id="@+id/ps_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/pinya_yellow1"
                    android:layout_span="3"
                    android:textSize="20sp"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeTextType="uniform"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:gravity="center"
                    tools:text="加油好貴加油好貴加油好貴加油好貴加油好貴加油好貴加油好貴加油好貴加油好貴加油好貴加油好貴加油好貴加油好貴"/>
            </TableRow>
        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>